<Page
    x:Class="MyVision.knowyoureyes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyVision"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Right" Width="1366">
        <Grid.RowDefinitions>
            <RowDefinition Height="123*"/>
            <RowDefinition Height="133*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="36,39,0,0" TextWrapping="Wrap" Text="Let us explore the Human Eye&#xD;&#xA;" VerticalAlignment="Top" Height="85" Width="613" FontSize="40" Background="#FFD1B3BD" IsReadOnly="True"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="39,170,0,0" TextWrapping="Wrap" Text="The Structure Of Eye" VerticalAlignment="Top" Height="84" Width="522" TextChanged="textBox1_TextChanged" FontSize="33.333" IsReadOnly="True"/>
        <Button x:Name="button" Content="Back" HorizontalAlignment="Left" Margin="16,298,0,0" Grid.Row="1" VerticalAlignment="Top" Height="88" Width="218" FontSize="40" Click="button_Click"/>

    </Grid>
</Page>
